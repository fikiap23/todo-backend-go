# Copy this file to .env and adjust values as needed:
#   cp .env.example .env
#
# For Docker: use host "postgres" and "redis" (service names).
# Variables below with no dots (APP_PORT, DB_*) are used by docker-compose;
# keep them in sync with BACKEND_* for the app.

# Docker Compose (no dots in names)
APP_PORT=8080
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=todo-backend

BACKEND_PRIMARY.ENV=local

BACKEND_SERVER.PORT=8080
BACKEND_SERVER.READ_TIMEOUT=30
BACKEND_SERVER.WRITE_TIMEOUT=30
BACKEND_SERVER.IDLE_TIMEOUT=60
BACKEND_SERVER.CORS_ALLOWED_ORIGINS=http://localhost:3000

# In Docker, use the service name as host
BACKEND_DATABASE.HOST=postgres
BACKEND_DATABASE.PORT=5432
BACKEND_DATABASE.USER=postgres
BACKEND_DATABASE.PASSWORD=postgres
BACKEND_DATABASE.NAME=todo-backend
BACKEND_DATABASE.SSL_MODE=disable
BACKEND_DATABASE.MAX_OPEN_CONNS=25
BACKEND_DATABASE.MAX_IDLE_CONNS=25
BACKEND_DATABASE.CONN_MAX_LIFETIME=300
BACKEND_DATABASE.CONN_MAX_IDLE_TIME=300

BACKEND_AUTH.SECRET_KEY=secret

BACKEND_INTEGRATION.RESEND_API_KEY=resend_key

# In Docker, use the redis service name
BACKEND_REDIS.ADDRESS=redis://redis:6379

# Observability
BACKEND_OBSERVABILITY.SERVICE_NAME=todo-backend
BACKEND_OBSERVABILITY.ENVIRONMENT=development
BACKEND_OBSERVABILITY.LOGGING.LEVEL=debug
BACKEND_OBSERVABILITY.LOGGING.FORMAT=console
BACKEND_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD=100ms
# Set your New Relic license key or use a placeholder for development
BACKEND_OBSERVABILITY.NEW_RELIC.LICENSE_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
BACKEND_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED=true
BACKEND_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED=true
BACKEND_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING=false
BACKEND_OBSERVABILITY.HEALTH_CHECKS.ENABLED=true
BACKEND_OBSERVABILITY.HEALTH_CHECKS.INTERVAL=30s
BACKEND_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT=5s
BACKEND_OBSERVABILITY.HEALTH_CHECKS.CHECKS=database,redis
